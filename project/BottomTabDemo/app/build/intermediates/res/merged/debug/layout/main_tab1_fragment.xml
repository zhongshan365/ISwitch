<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:gravity="center_horizontal"
android:paddingTop="20dp"
android:orientation="vertical"
android:background="@drawable/bg"
tools:context=".MainActivity" >

<!-- 主界面3个部分 -->
<LinearLayout
	android:id="@+id/indexPage"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginTop="10dp"
	android:gravity="center_horizontal"
	android:orientation="vertical" >

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal"
		android:orientation="horizontal" >
		<ToggleButton
			android:id="@+id/open_closeButton"
			android:layout_width="110dp"
			android:layout_height="110dp"
			android:layout_marginTop="10dp"
			android:layout_marginRight="10dp"
			android:background="@drawable/button_orange"
			android:text="开关"
			android:textColor="#ffffff"
			android:textSize="20sp"/>
		<Button
			android:id="@+id/sharkSwitch"
			android:layout_width="110dp"
			android:layout_height="110dp"
			android:layout_marginTop="10dp"
			android:layout_marginLeft="10dp"
			android:background="@drawable/button_blue"
			android:text="摇一摇"
			android:textColor="#ffffff"
			android:textSize="20sp"/>

	</LinearLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal"
		android:orientation="horizontal" >
		<Button
			android:id="@+id/setButton"
			android:layout_width="110dp"
			android:layout_height="110dp"
			android:layout_marginTop="10dp"
			android:layout_marginRight="10dp"
			android:background="@drawable/button_green"
			android:text="设置"
			android:textColor="#ffffff"
			android:textSize="20sp"/>
		<Button
			android:id="@+id/addButton"
			android:layout_width="110dp"
			android:layout_height="110dp"
			android:layout_marginLeft="10dp"
			android:layout_marginTop="10dp"
			android:background="@drawable/button_purple"
			android:text="@string/add"
			android:textColor="#ffffff"
			android:textSize="20sp" />
	</LinearLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal"
		android:orientation="vertical" >
		<Button
			android:id="@+id/time_open_bt"
			android:layout_width="240dp"
			android:layout_height="60dp"
			android:layout_marginTop="10dp"
			android:background="@drawable/bt_rect_red"
			android:text="设置定时开时间"
			android:textColor="#ffffff"
			android:textSize="20sp"/>
		<Button
			android:id="@+id/time_close_bt"
			android:layout_width="240dp"
			android:layout_height="60dp"
			android:layout_marginTop="10dp"
			android:background="@drawable/bt_rect_green"
			android:text="设置定时关时间"
			android:textColor="#ffffff"
			android:textSize="20sp" />
	</LinearLayout>

</LinearLayout>

</LinearLayout>